{{#each posts}}
<article class="card">
    <div class="container">
        <h2>
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <div>
            {{!-- call the helper function to render the date --}}
            Posted by {{User.username}} on {{format_date createdAt}}
        </div>
    </div>
    <div class="card-body">
        {{body}}
    </div>
</article>
{{/each}}